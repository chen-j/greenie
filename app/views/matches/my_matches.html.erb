<%= render "partials/header"  %>
<div class="container matches-home ">
    <h1>My matches</h1>

    <% @matches.each do |one_match| %>
        <div class="col-sm-12 match-details-link">
            <div class="row align-middle">
                    <span class="col-sm-3"><%= one_match.teamAName %></span><span class="col-sm-1">VS</span><span class="col-sm-3"><%= one_match.teamBName %></span>
                    <span class="col-sm-4">@ <%= one_match.venue %> on <%= one_match.matchdate.strftime("%A, %d %b %Y %l:%M %p") %></span>
                    <span class=col-sm-1><%= link_to "Manage", match_path(one_match.id), class: "btn btn-primary btn-sm" %></span>
            </div>
        </div>
    <% end %>

</div>
